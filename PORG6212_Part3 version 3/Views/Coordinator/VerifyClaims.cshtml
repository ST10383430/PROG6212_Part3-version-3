@model IEnumerable<PORG6212_Part3_version_3.Models.LecturerClaim>
@{
    ViewData["Title"] = "Verify Claims";
}

<h2>Verify Claims</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Hours Worked</th>
            <th>Hourly Rate</th>
            <th>Total Payment</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var claim in Model)
        {
            <tr>
                <td>@claim.Id</td>
                <td>@claim.HoursWorked</td>
                <td>@claim.HourlyRate</td>
                <td>@claim.TotalPayment</td>
                <td>@claim.Status</td>
                <td>
                    <form asp-action="UpdateStatus" method="post">
                        <input type="hidden" name="id" value="@claim.Id" />
                        <button name="status" value="Approved" class="btn btn-success">Approve</button>
                        <button name="status" value="Rejected" class="btn btn-danger">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
